<%- include('partials/header.ejs') %>

    <div class="container">
        <div class="left-section">
            <div class="left-section">
                <img src="./img/alice.jpg" alt="Image 1">
                <img src="./img/bleach.jpg" alt="Image 2">
                <img src="./img/matrix.jpg" alt="Image 3">
                <img src="./img/walking.jpg" alt="Image 4">
              </div>
          <!-- Contenu de la section de gauche -->
        </div>
        <main>
            <form action="#" aria-label="Informations d'enregistrement">
              <div>
                <label for="name">Nom</label>
                <label for="firstName">Prénom</label>
                <input required name="name" id="name" placeholder="ex: Dupont" />
                <input
                  required
                  name="firstName"
                  id="firstName"
                  placeholder="ex: Michel"
                />
              </div>
      
              <label for="email">Email</label>
              <input
                required
                type="email"
                name="email"
                id="email"
                placeholder="ex: m.dupont@gmail.com"
              />
              <label for="password">Mot de passe</label>
              <input
                required
                type="password"
                name="password"
                id="password"
                placeholder="*****************"
              />
      
              <input type="submit" value="Créer un compte" />
            </form>
          </main>
<%- include('partials/footer.ejs') %>
